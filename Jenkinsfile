pipline {
agent any 
  
  stages {
    
    stage ("build") {
      steps {
        echo 'building the application'
            }
                    }
    
    
    stage ("test"){
      steps {
        echo 'testing the application'
            }
                  }
    
    stage ("depoly"){
      steps {
        echo 'deploying the application'
            }
                    }
  }
  post {
    always {
           echo "Hiiiiiii"
           }
       }


}
